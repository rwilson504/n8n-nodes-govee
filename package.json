{
	"name": "n8n-nodes-govee",
	"version": "0.2.2",
	"description": "n8n community node for controlling Govee smart devices (lights, plugs, switches, appliances)",
	"license": "MIT",
	"homepage": "https://github.com/rwilson504/n8n-nodes-govee",
	"keywords": [
		"n8n-community-node-package"
	],
	"author": {
		"name": "Richard Wilson",
		"email": "richard.a.wilson@microsoft.com"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/rwilson504/n8n-nodes-govee.git"
	},
	"scripts": {
		"build": "n8n-node build",
		"build:watch": "tsc --watch",
		"dev": "n8n-node dev",
